    <!-- jQuery -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- daterangepicker -->
    <script src="plugins/moment/moment.min.js"></script>
    <script src="plugins/daterangepicker/daterangepicker.js"></script>
    <!-- overlayScrollbars -->
    <script src="plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.js"></script>
    <!-- Insert this line after script imports -->
  
    <script>
      let loader = '<div class="overlay"><i class="fas fa-2x fa-sync-alt fa-spin"></i></div>';
      $('#table_load').append(loader);
      fetch("http://localhost:5000/get-files")
      .then(res => res.json())
      .then(json => {
        var data = '';
        for(k in json) {
          var fileName = Object.keys(json[k]);
          var date = Object.values(json[k]);
          data = data + '<tr><td>' + fileName + '</td><td>' + date + '</td><td><button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal-files"><i class="fas fa-upload"></i></button><button class="btn btn-success btn-sm ml-2"><i class="fas fa-download"></i></button></td></tr>';
        }
        $('#table_body').empty();
        $('#table_body').append(data);
        $('table').show();
      });
      $('#table_load .overlay').remove();
    </script>
  </body>